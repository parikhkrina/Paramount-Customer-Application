<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    android:orientation="vertical"
    android:gravity="center"
    android:weightSum="2"
    android:background="@mipmap/wallpaper"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activities.Login_OptionPage">



    <LinearLayout
        android:gravity="bottom|center"
        android:layout_weight="1"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="0dp">

        <ImageView
            android:id="@+id/iv_logo"
            android:layout_width="wrap_content"
            android:layout_height="280dp"
            android:layout_gravity="center"
            android:adjustViewBounds="true"
            android:scaleType="fitXY"
            android:src="@mipmap/group_logo" />


    </LinearLayout>


        <LinearLayout
            android:layout_gravity="center"
            android:layout_weight="1"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="0dp">




        <paramount.com.androidproject.utils.DominoBoldTextView
            android:gravity="center"
            android:layout_marginTop="50dp"
            android:background="@drawable/btn_rounded_shape"
            android:layout_gravity="center"
            android:textColor="@color/white"
            android:textSize="20sp"
            android:text="@string/exitsuser"
            android:id="@+id/tv_exitsuser"
            android:layout_width="250dp"
            android:layout_height="wrap_content" />

        <paramount.com.androidproject.utils.DominoBoldTextView
            android:gravity="center"
            android:layout_marginTop="30dp"
            android:background="@drawable/btn_rounded_shape"
            android:layout_gravity="center"
            android:textColor="@color/white"
            android:textSize="20sp"
            android:text="@string/newuser"
            android:id="@+id/tv_newuser"
            android:layout_width="250dp"
            android:layout_height="wrap_content" />

        </LinearLayout>

</LinearLayout>